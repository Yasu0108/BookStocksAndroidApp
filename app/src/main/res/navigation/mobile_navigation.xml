<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="jp.co.daihata_tech.handstacks.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_scan"
        android:name="jp.co.daihata_tech.handstacks.ui.scan.ScanFragment"
        android:label="@string/title_scan"
        tools:layout="@layout/fragment_scan" >
        <action
            android:id="@+id/action_navigation_scan_to_bookRegisterFragment"
            app:destination="@id/bookRegisterFragment" />
        <action
            android:id="@+id/action_navigation_scan_to_cameraFragment"
            app:destination="@id/cameraFragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_bookstocks"
        android:name="jp.co.daihata_tech.handstacks.ui.bookstocks.BookStocksFragment"
        android:label="@string/title_book_stocks"
        tools:layout="@layout/fragment_bookstocks" />

    <fragment
        android:id="@+id/bookRegisterFragment"
        android:name="jp.co.daihata_tech.handstacks.ui.bookregister.BookRegisterFragment"
        android:label="BookRegisterFragment" >
        <action
            android:id="@+id/action_bookRegisterFragment_to_navigation_scan"
            app:destination="@id/navigation_scan"
            app:popUpTo="@id/navigation_scan"
            app:popUpToInclusive="true" />
        <argument
            android:name="bookDto"
            app:argType="jp.co.daihata_tech.handstacks.dto.BookDto" />
    </fragment>
    <fragment
        android:id="@+id/cameraFragment"
        android:name="jp.co.daihata_tech.handstacks.ui.camera.CameraFragment"
        android:label="CameraFragment" >
        <action
            android:id="@+id/action_cameraFragment_self"
            app:destination="@id/cameraFragment" />
        <action
            android:id="@+id/action_cameraFragment_to_bookRegisterFragment"
            app:destination="@id/bookRegisterFragment" />
    </fragment>
</navigation>
